---
import '@/styles/global.css'
import BaseLayout from '@/layouts/BaseLayout.astro'
import BaseHead from '@/components/layout/BaseHead.astro'
import PortfolioHeader from '@/components/layout/PortfolioHeader.astro'
import Ticker from '@/components/layout/Ticker.astro'
import { themeConfig } from '@/config'

const { title, description } = Astro.props
---

<BaseLayout title={title} description={description} type="portfolio">
  <div class="portfolio-layout">
    <PortfolioHeader />
    <div class="mt-8">
      <Ticker />
    </div>
    <main class="portfolio-main">
      <slot />
    </main>
  </div>
</BaseLayout>

<style is:global>
  /* Portfolio-specific body styles - dark theme matching Figma design */
  body[data-layout-type='portfolio'] {
    padding: 0;
    max-width: none;
    margin: 0 auto;
    background-color: #282828 !important;
  }

  html:has(body[data-layout-type='portfolio']) {
    background-color: #282828 !important;
  }

  .portfolio-layout {
    /* Fixed-width container - 1280px max, centered */
    max-width: 1280px;
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding-top: 1rem;
    margin: 0 auto;
    background-color: #282828 !important;
  }

  .portfolio-main {
    flex: 1;
    padding: 2rem 0;
    width: 100%;
  }

  /* At 2xl breakpoint (1536px), lock to 1280px and center */
  @media (min-width: 1536px) {
    .portfolio-layout {
      max-width: 1280px;
    }
  }

  /* On mobile/tablet, allow full width */
  @media (max-width: 1535px) {
    .portfolio-layout {
      max-width: 100%;
      padding: 1rem;
    }
  }
</style>
