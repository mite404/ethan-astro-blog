---
import asterix from '@/assets/portfolio/asterix.svg'
import gradDither from '@/assets/portfolio/grad-dither-group.svg'
import { Image } from 'astro:assets'
---

<header class='relative w-full'>
  <!-- Top row with asterix icon and buttons -->
  <nav class='relative flex items-start justify-between px-0 pt-0'>
    <!-- Asterix icon -->
    <div class='w-[25px] h-[25px]'>
      <Image
        src={asterix}
        alt='Asterix icon'
        width={40}
        height={40}
      />
    </div>

    <!-- Button container -->
    <div class='flex gap-[9px]'>
      <a
        href='https://github.com/mite404'
        target='_blank'
        rel='noopener noreferrer'
        class='btn-github group relative flex items-center justify-center w-[70px] h-[40px] rounded-[40px]'>
        <span class='text-[13px] font-normal leading-none text-black font-guisol'> GITHUB </span>
      </a>
      <a
        href='/blog'
        class='btn-blog group relative flex items-center justify-center w-[61px] h-[40px] rounded-[40px]'>
        <span class='text-[13px] font-normal leading-none text-black font-guisol'> BLOG </span>
      </a>
    </div>
  </nav>

  <!-- Name text with gradient dither background -->
  <div class='relative'>
    <!-- Gradient dither background -->
    <div class='h-[51px] w-full'>
      <Image
        src={gradDither}
        alt=''
        width={797}
        height={51}
        class='h-full w-full'
        style='object-fit: cover;'
      />
    </div>

    <!-- Name text - positioned absolutely to overlap the gradient -->
    <h1
      class='absolute top-[20px] left-5 text-[70px] font-normal leading-[1em] font-fit neon-green'>
      Ethan Anderson
    </h1>
  </div>
</header>

<style>
  /* Font utility classes - fonts already loaded in global fonts.css */
  .font-guisol {
    font-family: 'Guisol', sans-serif;
  }

  .font-fit {
    font-family: 'Fit', sans-serif;
  }

  .neon-green {
    color: #7fee40;
  }

  /* Button styles matching Figma design */
  .btn-github {
    background-color: #d9d9d9;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.2s ease;
    text-transform: uppercase;
  }

  .btn-github:hover {
    background-color: #c0c0c0;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .btn-blog {
    background-color: #7fee40;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.2s ease;
    text-transform: uppercase;
  }

  .btn-blog:hover {
    background-color: #6dd835;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(127, 238, 64, 0.3);
  }
</style>
